{
  "name": "breath-master",
  "displayName": "Breath Master",
  "description": "Master your breathing and coding flow with gentle gamification and mindful tracking.",
  "version": "0.1.0",
  "publisher": "GSejas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GSejas/BreatheGlow.git"
  },
  "bugs": {
    "url": "https://github.com/GSejas/BreatheGlow/issues"
  },
  "homepage": "https://github.com/GSejas/BreatheGlow#readme",
  "keywords": [
    "breathing",
    "mindfulness",
    "wellness",
    "meditation",
    "productivity",
    "focus",
    "stress-relief",
    "gamification",
    "privacy",
    "ethical-design"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/vscode/extension.js",
  "browser": "./dist/vscode/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Breath Master",
      "properties": {
        "breathMaster.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the breathing status item."
        },
        "breathMaster.pattern": {
          "type": "string",
          "enum": [
            "chill",
            "medium",
            "active",
            "boxing",
            "relaxing",
            "custom"
          ],
          "default": "chill",
          "description": "Breathing pattern: chill (6-0-8-0), medium (5-0-5-0), active (4-2-4-1), boxing (4-4-4-4), relaxing (4-7-8-0), custom (use customPattern)."
        },
        "breathMaster.customPattern": {
          "type": "string",
          "default": "4-4-4-4",
          "pattern": "^\\d+-\\d+-\\d+-\\d+$",
          "description": "Custom breathing pattern in seconds: inhale-hold-exhale-pause (e.g., '4-4-4-4')."
        },
        "breathMaster.intensity": {
          "type": "number",
          "default": 0.6,
          "minimum": 0,
          "maximum": 1,
          "description": "Visual intensity (0-1) mapped perceptually; lower is subtler."
        },
        "breathMaster.tickMs": {
          "type": "number",
          "default": 100,
          "minimum": 16,
          "maximum": 1000,
          "description": "Animation tick interval in milliseconds."
        },
        "breathMaster.showBoth": {
          "type": "boolean",
          "default": true,
          "description": "Show breathing indicators on both left and right sides of status bar."
        },
        "breathMaster.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show phase change notifications (for maximum visibility)."
        },
        "breathMaster.enableGamification": {
          "type": "boolean",
          "default": false,
          "description": "ðŸŽ® Opt-in to meditation tracking and gentle gamification. Your data stays local and private."
        },
        "breathMaster.showStreak": {
          "type": "boolean",
          "default": true,
          "description": "Show daily meditation streak counter."
        },
        "breathMaster.showSessionTimer": {
          "type": "boolean",
          "default": true,
          "description": "Show today's meditation time."
        },
        "breathMaster.showXP": {
          "type": "boolean",
          "default": true,
          "description": "Show meditation XP and level progression."
        },
        "breathMaster.engagementLevel": {
          "type": "string",
          "enum": ["subtle", "moderate", "active"],
          "default": "subtle",
          "description": "How often to show gentle encouragement messages."
        },
        "breathMaster.dataPrivacy": {
          "type": "string",
          "enum": ["local-only", "export-allowed"],
          "default": "local-only",
          "description": "Your data control: local-only (never leaves your machine) or export-allowed (you can export/backup)."
        }
      }
    },
    "commands": [
      {
        "command": "breathMaster.toggle",
        "title": "Breath Master: Toggle"
      },
      {
        "command": "breathMaster.cyclePattern",
        "title": "Breath Master: Cycle Pattern"
      },
      {
        "command": "breathMaster.toggleMeditation",
        "title": "Breath Master: Toggle Meditation Session"
      },
      {
        "command": "breathMaster.showTour",
        "title": "Breath Master: Show Welcome Tour"
      },
      {
        "command": "breathMaster.exportData",
        "title": "Breath Master: Export Your Data"
      },
      {
        "command": "breathMaster.clearData",
        "title": "Breath Master: Clear All Data"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:integration": "node ./dist/test/runTest.js",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  }
}
